<style>
.all{
    margin: 30px 0 0 600px;
}
.bcontent1 {
            margin-top: 30px;
        }
</style>
<div class="col-md ml-5 all">
    <div class="row">
        <h1 class="playlistt">Playlists</h1>
    <div class="container mt-5 bcontent">
     <% for( const item of playlists) {%> 
        <div class="col-md-6">

       
     <div class="card mt-3  allPlaylist" style="width: 600px;">
         <div class="row no-gutters">
             <div class="col-sm-3">
                <img class="card-img" src="/uploads/image/<%= item.image %> " alt="Suresh Dasari Card">
             </div>
             <div class="col-sm-5">
                 <div class="card-body">
                     <h5 class="card-title"><%= item.name %></h5>
                     <p class="card-text"><%= item.author%></p>
                    
                     <audio controls>
                        <source src="horse.ogg" type="audio/ogg">
                        <source src="/uploads/music/<%= item.music %> " type="audio/mpeg">
                      Your browser does not support the audio element.
                      </audio>
                      <p class="card-text"><%= item.text%></p>
                 </div>
             </div>
             <% if (user.role === 'menejer') { %>
             <div class="col-sm-2 update">
                <form method="POST" action="<%=`/playlist/${item._id}?_method=DELETE`%>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                   
                   </form>
                   <a href="<%=`/${item._id}`%>" class="btn btn-primary edit">Edit</a>
              
             </div>

             <%} else { %>
                    
                <% } %>
         </div>
     </div>
    </div>
     <% } %> 
 </div>
</div>
</div>